    {
      "name": "Analytics",
      "item": [
        {
          "name": "Process Daily Analytics (Author)",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const now = new Date();",
                  "const yyyy = now.getUTCFullYear();",
                  "const mm = String(now.getUTCMonth() + 1).padStart(2, \"0\");",
                  "const dd = String(now.getUTCDate()).padStart(2, \"0\");",
                  "pm.collectionVariables.set(\"analyticsDate\", `${yyyy}-${mm}-${dd}`);"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 202\", function () {",
                  "  pm.response.to.have.status(202);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authorAccessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"date\": \"{{analyticsDate}}\"\n}"
            },
            "url": "{{baseUrl}}/analytics/process"
          }
        }
      ]
