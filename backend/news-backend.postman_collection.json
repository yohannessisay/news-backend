                  "});",
                  "const json = pm.response.json();",
                  "if (json && json.Object) {",
                  "  pm.collectionVariables.set(\"authorAccessToken\", json.Object.accessToken);",
                  "  pm.collectionVariables.set(\"authorId\", json.Object.user.id);",
